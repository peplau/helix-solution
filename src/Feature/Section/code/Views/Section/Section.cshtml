@using DynamicPlaceholders.Mvc.Extensions;
@using Sitecore.Feature.Section.Templates;
@model Sitecore.Mvc.Presentation.RenderingModel
@{  
    var cssClass = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.CSSClass)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.CSSClass]
        : string.Empty;
    var placeholderClass = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.PlaceholderClass)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.PlaceholderClass]
        : string.Empty;
    var heading = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.Heading)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.Heading]
        : string.Empty;
    var subHeading = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.Subheading)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.Subheading]
        : string.Empty;
    var identifier = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.Identifier)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.Identifier]
        : string.Empty;
    var footerText = Model.Rendering.Parameters.Contains(ParametersTemplate_SectionProperties.FieldNames.FooterText)
        ? Model.Rendering.Parameters[ParametersTemplate_SectionProperties.FieldNames.FooterText]
        : string.Empty;
}
<section id="@identifier" class="@cssClass">
    <div class="container">

        @if (!string.IsNullOrEmpty(heading) || !string.IsNullOrEmpty(subHeading))
        {
            <div class="row">
                <div class="col-lg-12 text-center">
                    @if (!string.IsNullOrEmpty(heading))
                    {
                        <h2 class="section-heading">@heading</h2>
                    }
                    @if (!string.IsNullOrEmpty(subHeading))
                    {
                        <h3 class="section-subheading text-muted">@subHeading</h3>
                    }                    
                </div>
            </div>
        }
        <div class="row @placeholderClass">
            @Html.Sitecore().DynamicPlaceholder("section")
        </div>
        @if (!string.IsNullOrEmpty(footerText))
        {
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <p class="large text-muted">@footerText</p>
                </div>
            </div>
        }
    </div>
</section>