@using Sitecore.Feature.BoxWithModal.Templates;
@using Sitecore.Basis.Dictionary.Extensions
@model Sitecore.Mvc.Presentation.Rendering
@{
    var wrapper = new __BoxWithModal(Model.Item);
    var boxId = string.Format("portfolioModal{0}", wrapper.ID.ToShortID());
    var containerCss = Sitecore.Context.PageMode.IsExperienceEditorEditing ? "portfolio-modal" : "portfolio-modal modal fade";
}
<div class="@containerCss" id="@boxId" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-dismiss="modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="modal-body">
                            <!-- Project Details Go Here -->
                            <h2>@Html.Sitecore().Field(__BoxWithModal.FieldIds.ModalTitle.ToString(), wrapper.InnerItem)</h2>
                            <p class="item-intro text-muted">@Html.Sitecore().Field(__BoxWithModal.FieldIds.ModalIntroText.ToString(), wrapper.InnerItem)</p>
                            @Html.Sitecore().Field(__BoxWithModal.FieldIds.ModalImage.ToString(), wrapper.InnerItem, new { @class = "img-responsive img-centered" })
                            @Html.Sitecore().Field(__BoxWithModal.FieldIds.ModalContent.ToString(), wrapper.InnerItem)
                            <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> @Html.Sitecore().Dictionary("/BoxWithModal/Modal/Close modal button label", "Close project")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>